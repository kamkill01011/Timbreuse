<?xml version="1.0" encoding="UTF-8"?>
<web-app 
  xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0">
  
	<filter>
        <filter-name>Connetion</filter-name>
        <filter-class>ch.cpnv.timbreuse.filters.ConnectionFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>Connetion</filter-name>
        <url-pattern>/student/*</url-pattern>
        <url-pattern>/teacher/*</url-pattern>
        <url-pattern>/admin/*</url-pattern>
    	<dispatcher>REQUEST</dispatcher>
    	<dispatcher>FORWARD</dispatcher>
    </filter-mapping>
  
	<servlet>
		<servlet-name>ManageStudents</servlet-name>
		<servlet-class>ch.cpnv.timbreuse.servlets.ManageStudents</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Connection</servlet-name>
		<servlet-class>ch.cpnv.timbreuse.servlets.Connection</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>ch.cpnv.timbreuse.servlets.Logout</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ManageStudents</servlet-name>
		<url-pattern>/managestudents</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Connection</servlet-name>
		<url-pattern>/connection</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	
	<listener>
    	<listener-class>ch.cpnv.timbreuse.config.DAOFactoryInitialisation</listener-class>
	</listener>
	
</web-app>