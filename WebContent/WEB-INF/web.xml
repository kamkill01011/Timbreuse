<?xml version="1.0" encoding="UTF-8"?>
<web-app 
  xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0">
  
    <filter>
        <filter-name>ConnectedFilter</filter-name>
        <filter-class>ch.cpnv.timbreuse.filters.ConnectedFilter</filter-class>
    </filter>
	<filter>
        <filter-name>Student</filter-name>
        <filter-class>ch.cpnv.timbreuse.filters.StudentFilter</filter-class>
    </filter>
    <filter>
        <filter-name>Teacher</filter-name>
        <filter-class>ch.cpnv.timbreuse.filters.TeacherFilter</filter-class>
    </filter>
    <filter>
        <filter-name>Admin</filter-name>
        <filter-class>ch.cpnv.timbreuse.filters.AdminFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ConnectionFilter</filter-name>
        <filter-class>ch.cpnv.timbreuse.filters.ConnectionFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>ConnectedFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Student</filter-name>
        <url-pattern>/student/*</url-pattern>
    	<dispatcher>REQUEST</dispatcher>
    	<dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Teacher</filter-name>
        <url-pattern>/teacher/*</url-pattern>
    	<dispatcher>REQUEST</dispatcher>
    	<dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Admin</filter-name>
        <url-pattern>/admin/*</url-pattern>
    	<dispatcher>REQUEST</dispatcher>
    	<dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ConnectionFilter</filter-name>
        <url-pattern>/connecting.jsp</url-pattern>
    	<dispatcher>REQUEST</dispatcher>
    	<dispatcher>FORWARD</dispatcher>
    </filter-mapping>
 	
</web-app>